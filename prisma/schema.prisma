generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
  moduleFormat    = "cjs"
}

datasource db {
  provider = "mysql"
}

enum UserRole {
  admin
  guest
}

model User {
  id       String   @id
  username String
  role     UserRole
}

model Category {
  id    String  @id
  name  String
  products Product[]
}

model Product {
  id         String   @id
  name       String
  code       String
  categoryId String?
  category   Category? @relation(fields: [categoryId], references: [id])
}
